<%- include('../blocks/header', {path, auth, settings}) %>
			<h2>Site Settings</h2>
			<form method="POST" action="/admin/settings">
			<fieldset>
			<legend>Site Configuration</legend>
			<div class="dynamic-width">
				<label for="title">Title/Name: 
				<input type="text" name="title" id="title" value="<%- settings.title %>">
				<span style="display:none"></span>
				</label>
			</div>
			<div class="dynamic-width">
				<label for="description">Description: 
				<input type="text" name="description" id="description" value="<%- settings.description %>">
				<span style="display:none"></span>
				</label>
			</div>
			<div class="dynamic-width">
				<label for="title">Site Author: 
				<input type="text" name="author" id="author" value="<%- settings.author %>">
				<span style="display:none"></span>
				</label>
			</div>
			</fieldset>
			<fieldset>
			<legend>Additional Options</legend>
			<div class="input-checkbox">
				<label for="enableComments">
				<input name="enableComments" id="enableComments" type="checkbox" value="on" <% if (settings.commentsEnabled) { %>checked<% } %>>
				Enable Comments 
				</label>
			</div>
			<div class="input-checkbox">
				<label for="enableRegistration">
				<input name="enableRegistration" id="enableRegistration" type="checkbox" value="on" <% if (settings.registrationEnabled) { %>checked<% } %>>
				Enable Registration
				</label>
			</div>
			</fieldset>
      <button type="submit" class="pretty-button">Save</button>
      </form>
<% include ../blocks/footer %>